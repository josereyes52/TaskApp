{% extends 'base.html.twig' %}
{%block titulo%}Registrar Ticket{%endblock%}
{% block menu_ticket %}class="active"{% endblock %}
{% block body %}
    <h1>Registrar Ticket</h1>

    <form>
        <div class="form-group">
            <label>{{ nota.usuarioId.nombre }}</label><br>
            <textarea id="comentario" rows="4" cols="50" ></textarea>
            <input type="hidden" id="usuarioCreador" value="3">
            <input type="hidden" id="fechaCreado" value="2018-8-12*">
            <input type="hidden" id="ticketid" value="2">

        <div>
        <button type="button" class="btn btn-primary" onclick="registrar()"> Guardar</button>
    </form>

    <script>
        function registrar(){
            var ticketId = $('#ticketid').val();
            var comentario = $('#comentario').val();
            var fecha = $('#fechaCreado').val();
            var usuarioId = $('#usuarioCreador').val();


            var data = {
                    ticketId: ticketId,
                    usuarioId: usuarioId,
                    comentario: comentario,
                    fecha: fecha
            };
            $.ajax({
                url: Routing.generate('guardar_nota'),
                type:'POST',
                data:JSON.stringify(data),
                success: function(response){
                   console.log(response);
                },
                error: function(err){
                    console.log(err);
                }
            })

        }

    </script>
{% endblock %}